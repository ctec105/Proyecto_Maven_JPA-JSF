<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
    
    <lifecycle>
        <phase-listener>pe.edu.proyecto.jsf.listener.SessionPhaseListener</phase-listener>
    </lifecycle>
    
    <application>
    	<resource-bundle>
    		<base-name>pe.edu.proyecto.recursos.textos</base-name>
    		<var>texto</var>
    	</resource-bundle>
    	<message-bundle>pe.edu.proyecto.recursos.textos</message-bundle>
    	<locale-config>
    		<default-locale>es</default-locale>
    		<supported-locale>en</supported-locale>
    	</locale-config>
    </application>
    
    <factory>
	  <exception-handler-factory>
	    pe.edu.proyecto.util.CustomExceptionHandlerFactory
	  </exception-handler-factory>
	</factory>

</faces-config>
